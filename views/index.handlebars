<h1>The Burger-Dex</h1>

<div>
   <h2>Burgers to Eat</h2>
      <ul>
         {{#each burgers}}
           {{#unless devoured}}
             {{>burgers/burger-block food=true}}
           {{/unless}}
         {{/each}}
     </ul>
</div>

<div>
    <h2>Devoured Burgers</h2>
    <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{>burgers/burger-block food=false}}
          {{/if}}
        {{/each}}
    </ul>
</div>

<h2>Add a Burger to the Dex!</h2>
<form class="create-form">
    <div class="form-group">
        <textarea type="text" id="burg" placeholder="Name Your Burger!"></textarea>
    </div>
    <button id="burger-button" type="submit">Add Your Burger!</button>
</form>